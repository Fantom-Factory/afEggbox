-- app.renderLayout(true, "404 Not Found")

	ol.breadcrumb
		li.active	Not Found

	div.row
		article.col-sm-12
			h1.podHeading
				span	404
				| Not Found
		
			div.effect (data-gridtilt="hoverPad")
				div.glow
				div.tilt
					div.hive
				div.hole
					img (src="/images/theHole.png" alt="A tear in the Fantomverse")
				
				
	style |
		.effect {
			height:			720px;
			width:			720px;
			margin:			auto;
			text-align:		center;
		}
		.hole {
			position:		absolute;
			width:			720px;
			height:			720px;
		}
		.tilt {
			position:		absolute;
			width:			720px;
			height:			720px;
			perspective:	1000px;
			overflow:		hidden;
		}
		.hive {
			position2:		absolute;
			width:			720px;
			height:			720px;
			background:		url(data:image/png;base64,) repeat;
		}
		.glow {
			position:		absolute;
			width:			720px;
			height:			720px;
			background-color:	#000;
		}