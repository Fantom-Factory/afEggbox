-- app.renderLayout("My Pods")

	h1.page-header	Pods

	div.table-responsive
		table.table.table-striped.table-condensed
			tr
				th	Name
				th	Version
				th	Built On
				th	Downloads
				th	Summary
			-- allPods.each |pod|
				tr
					td	${pod.name}
					td	${pod.version}
					td	${pod.builtOn.toLocale("DDD MMM YYYY")}
					td	${downloads(pod)}
					td	${pod.meta.summary}
