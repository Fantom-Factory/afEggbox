-- app.renderLayout("Pods")

	ol.breadcrumb
		li.active	Pods

	article
		h1.podHeading
			span	all
			| Pods

		-- if (allPods.isEmpty)
			p	This repository has no pods! Why don't you upload one?
		
		-- else
			p	There are ${allPods.size} pod(s).
			div.table-responsive
				table.table.table-striped.table-condensed
					tr
						th	Name
						th	Version
						th	Built On
						th	Summary
						th	Published by
						th	Documentation
					-- allPods.each |pod|
						tr
							td;	a (href="${podSummaryUrl(pod)}") ${pod.name}
							// / ${pod.meta.projectName}
							td	${pod.version}
							td	${pod.builtOn.toLocale("DDD MMM YYYY")}
							td	${pod.summary}
							td;	a (href="${userUrl(pod.owner)}") ${pod.owner.screenName}
							td;	== podDocsHtml(pod)
