-- app.renderLayout(true, "Pods")

	ol.breadcrumb
		li.active	Pods

	article
		h1.podHeading
			span	all
			| Pods

		-- if (allPods.isEmpty)
			p	This repository has no pods! Why don't you upload one?
		
		-- else
			p	There are ${allPods.size} pod(s).
			div.table-responsive
				table.table.table-striped.table-condensed
					tr
						th	Name
						th	Version
						th.text-nowrap	Built On
						th	Summary
						th	Published by
						th	Documentation
					-- allPods.each |pod|
						tr
							td.text-nowrap;	a (href="${podSummaryUrl(pod)}") ${pod.name}
							// / ${pod.projectName}
							td.text-nowrap	${pod.version}
							td.text-nowrap	${pod.builtOn.toLocale("DDD MMM YYYY")}
							td	${pod.summary}
							td.text-nowrap
								a (href="${userUrl(pod.owner)}")
									img.img-rounded (src="${pod.owner.gravatarImageUrl(20)}")
									|  ${pod.owner.screenName}
							td;	== podDocsHtml(pod)
